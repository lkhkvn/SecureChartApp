@model SignalRChatMVC.Models.LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập Zalo";
    Layout = null;
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/login.css" />
</head>

<body>
    <div class="container">
        <h2>Đăng nhập </h2>

        <div asp-validation-summary="ModelOnly" class="text-danger validation-summary-errors"></div>

        <form asp-action="Login" method="post">
            <div class="input-group">
                <label asp-for="Email">Tên đăng nhập hoặc Email</label>
                <input asp-for="Email" type="text" placeholder="Nhập tên đăng nhập hoặc email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="input-group">
                <label asp-for="Password">Mật khẩu</label>
                <input asp-for="Password" type="password" placeholder="Nhập mật khẩu" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit">Đăng nhập</button>

            <p>Chưa có tài khoản? <a asp-action="Register" asp-controller="Account">Đăng ký ngay</a></p>
        </form>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>